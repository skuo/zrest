<assembly>
  <id>${dist}</id>
  <baseDirectory>zrest-${project.version}-${dist}</baseDirectory>
  <formats>
    <format>tar.gz</format>
  </formats>
  <fileSets>
    <fileSet>
      <directory>src/main/bin</directory>
      <outputDirectory>bin</outputDirectory>
      <includes>
        <include>**/*</include>
      </includes>
      <fileMode>755</fileMode>
      <filtered>true</filtered>
    </fileSet>
    <fileSet>
      <directory>src/main/resources</directory>
      <outputDirectory>conf</outputDirectory>
      <includes>
        <include>**/*.xml</include>
        <include>**/*.properties</include>
      </includes>
      <excludes>
        <exclude>rest-override.properties</exclude>
      </excludes>
    </fileSet>
   
    <!-- override some conf files, replacing tokens -->
    <fileSet>
      <directory>${override.conf.dir}</directory>
      <outputDirectory>config</outputDirectory>
      <includes>
        <include>*.xml</include>
        <include>*.properties</include>
      </includes>
      <filtered>false</filtered>
    </fileSet>
    <!-- copy war -->
    <fileSet>
      <directory>target</directory>
      <outputDirectory>./</outputDirectory>
      <includes>
        <include>*.war</include>
      </includes>
      <filtered>false</filtered>
    </fileSet>
    
  </fileSets>

  <dependencySets>
    <dependencySet>
      <useTransitiveDependencies>false</useTransitiveDependencies>
      <outputDirectory>lib</outputDirectory>
      <includes>
        <include>org.eclipse.jetty:jetty-runner</include>
      </includes>
    </dependencySet>
  </dependencySets>
</assembly>
